syntax on
filetype plugin indent on
set nocompatible
set wrap linebreak nolist
vmap j gj
vmap k gk
vmap $ g$
vmap 0 g0
nmap $ g$
nmap 0 g0
nnoremap j gj
nnoremap k gk
set showcmd
set showmode
set number
set shiftround
set autoindent
set copyindent
set ignorecase
set smartcase
set smarttab
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
set backspace=indent,eol,start
